class Solution(object):
    def countGoodNumbers(self, n):
        MOD = 10**9 + 7

        def mod_pow(x, y):
            if y == 0:
                return 1
            half = mod_pow(x, y // 2) % MOD
            if y % 2 == 0:
                return (half * half) % MOD
            else:
                return (half * half * x) % MOD

        even = n // 2
        odd = n - even
        return (mod_pow(5, odd) * mod_pow(4, even)) % MOD
